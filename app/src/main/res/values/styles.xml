<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_material_light02</item>
    </style>

    <style name="input_basic_styleTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/input_item_height</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="graph_activity_basic_style" parent="input_basic_styleTextView">
        <item name="android:padding">0dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="output_basic_styleTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/output_item_height</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="help_icon_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/input_item_height</item>
        <item name="android:contentDescription">Info icon</item>
        <item name="android:src">@drawable/ic_info_black_24dp</item>
        <item name="android:background">@color/background_material_light02</item>
    </style>

    <style name="title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="mainButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="radioButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/input_item_height</item>
    </style>

    <style name="myRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@android:color/holo_green_dark</item>
        <item name="colorControlActivated">@android:color/holo_orange_dark</item>
    </style>

</resources>
