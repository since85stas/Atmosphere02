<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="input_basic_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/input_item_height</item>
        <item name="android:textSize">22sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="output_basic_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/output_item_height</item>
        <item name="android:textSize">22sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="help_icon_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/input_item_height</item>
        <item name="android:contentDescription">Info icon</item>
        <item name="android:src">@drawable/ic_info_black_24dp</item>
    </style>

    <style name="title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="mainButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>
